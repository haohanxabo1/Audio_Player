<mah:MetroWindow x:Class="AudioPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlay"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
       
        Title="Audio Player" Height="500" Width="850" Icon="/disc.ico" x:Name="mainw"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen">
    


    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Click="LaunchGitHubSite" ToolTip="Open up the GitHub site">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="SocialGithubOctocat" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*" />
            <ColumnDefinition Width="310*"/>

            <ColumnDefinition Width="47*" />
        </Grid.ColumnDefinitions>


        <ListView 
            AllowDrop="True"
            
            Margin="5,5,0,10"
            Grid.Column="0"
            Grid.Row="0"
            x:Name="listviewaudio"
            d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Drop="listviewaudio_Drop">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Format" Width="100" DisplayMemberBinding="{Binding Format}" />
                    <GridViewColumn Header="Directory" Width="300" DisplayMemberBinding="{Binding Directory}" />
                    <GridViewColumn Header="Duration" Width="80" DisplayMemberBinding="{Binding Duration}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="2"
                Orientation="Vertical"
                VerticalAlignment="Top"
                Margin="5,29,11,0">
            <Button x:Name="reload"                
               
                Width="48" Height="48"
                FontSize="28"
                Click="reload_Click"
                 Style="{DynamicResource MahApps.Styles.Button.Circle}" >
                <iconPacks:PackIconModern Width="22"
                    Height="22"
                    Kind="Refresh" />
            </Button>

            <Button x:Name="folder"
                Width="48" Height="48"
                FontSize="24"
                Margin="0,8,0,0"
                Click="folder_Click"
                Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconModern Width="22"
                    Height="22"
                    Kind="FolderOpen" />
            </Button>

            <Button x:Name="settings"
                Width="48" Height="48"
                FontSize="24"
                Margin="0,8,0,0"
                Click="settings_Click"
                Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconModern Width="22"
                      Height="22"
                      Kind="Settings" />
            </Button>
        </StackPanel>


        <StackPanel Grid.Column="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="19,224,0,0">
            <Button x:Name="uparrow"
            Width="48"
            Height="48"
            Click="uparrow_Click"
                    Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconModern Width="22"
                  Height="22"
                  Kind="ArrowUp" />

            </Button>

            <Button x:Name="downarrow"
            Width="48"
            Height="48"
            Margin="0,8,0,0"
            Click="downarrow_Click"
                    Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconModern Width="22"
                    Height="22"
                    Kind="ArrowDown" />
            </Button>
        </StackPanel>


        <Slider x:Name="processaudio"              
                
                Grid.Column="0"
                Grid.Row="1"
                Value="0" 
                Maximum="300"
                VerticalAlignment="Top" Height="27" ValueChanged="processaudio_ValueChanged" Margin="10,0,12,0" Grid.ColumnSpan="2" 
                Style="{StaticResource MaterialDesignSlider}"
                
                />

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="162,53,0,0" Grid.Column="1">



            <Button x:Name="previousa"
            Width="48"
            Height="48"
            FontSize="24"
            Click="previousa_Click"
            Margin="0,0,8,0"
                    Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:Fontaudio Width="22"
     Height="22"
     Kind="Prev" />
            </Button>

            <Grid Width="48" Height="48" Margin="0,0,8,0">

                <Button x:Name="playaudio"
                Width="48"
                Height="48"
                FontSize="24"
                Style="{DynamicResource MahApps.Styles.Button.Circle}"
                Click="playaudio_Click">
                    <iconPacks:Fontaudio Width="22"
                        Height="22"
                        Kind="Play" />
                </Button>

                <Button x:Name="stopaudio"
                Width="48"
                Height="48"
                FontSize="24"
                FontWeight="Bold"
                Style="{DynamicResource MahApps.Styles.Button.Circle}"
                Click="stopaudio_Click"
                Visibility="Hidden">
                    <iconPacks:Fontaudio Width="22"
                        Height="22"
                        Kind="Stop" />
                </Button>
            </Grid>

            <Button x:Name="nexta"
            Width="48"
            Height="48"
            FontSize="24"
             Style="{DynamicResource MahApps.Styles.Button.Circle}"
            Click="nexta_Click">
                <iconPacks:Fontaudio Width="22"
                    Height="22"
                    Kind="Next" />
            </Button>
        </StackPanel>

        <mah:ToggleSwitch
            
            Grid.Row="1"
            Grid.Column="0" 
            Header="Random order?"
            Grid.ColumnSpan="2" 
            Margin="24,0,0,0"
            OnContent=""
            OffContent=""
            x:Name="randa" Toggled="randa_Toggled"
            
            />


        <TextBlock x:Name="timelabel1"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="504,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="00:00"
                   />

        <TextBlock Text="/"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="542,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   />
        <TextBlock x:Name="timelabel2"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="555,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="00:00"
                   />

        <!--<TextBlock x:Name="playing" 
                   Grid.Column="0"
                    Grid.Row="1"
                    Margin="429,35,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Playing: "
                   ></TextBlock>
        <TextBlock x:Name="name2" 
           Grid.Column="0"
            Grid.Row="1"
            Margin="481,35,0,-1"
            HorizontalAlignment="Left"
            Text=""/>-->





    </Grid>

</mah:MetroWindow>
