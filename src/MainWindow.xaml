<Window x:Class="AudioPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlay"
        mc:Ignorable="d"
        Title="Audio Player" Height="500" Width="850" Icon="/disc.ico" x:Name="mainw">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*" />
            <ColumnDefinition Width="310*"/>

            <ColumnDefinition Width="47*" />
        </Grid.ColumnDefinitions>


        <ListView 
            Margin="5,5,0,10"
            Grid.Column="0"
            Grid.Row="0"
            x:Name="listviewaudio"
            d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Format" Width="100" DisplayMemberBinding="{Binding Format}" />
                    <GridViewColumn Header="Directory" Width="300" DisplayMemberBinding="{Binding Directory}" />
                    <GridViewColumn Header="Duration" Width="80" DisplayMemberBinding="{Binding Duration}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="2"
                Orientation="Vertical"
                VerticalAlignment="Top"
                Margin="5,29,11,0">
            <Button x:Name="reload"                
                Content="⟳"
                Width="48" Height="48"
                FontSize="28"
                Click="reload_Click"/>

            <Button x:Name="folder"
                Content="📁"
                Width="48" Height="48"
                FontSize="24"
                Margin="0,8,0,0"
                Click="folder_Click"/>

            <Button x:Name="settings"
                Content="⚙️"
                Width="48" Height="48"
                FontSize="24"
                Margin="0,8,0,0"
                Click="settings_Click"/>
        </StackPanel>


        <StackPanel Grid.Column="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="19,224,0,0">
            <Button x:Name="uparrow"
            Width="48"
            Height="48"
            Click="uparrow_Click">
                <TextBlock Text="⬆"
                   FontSize="36"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,4"/>

            </Button>

            <Button x:Name="downarrow"
            Width="48"
            Height="48"
            Margin="0,8,0,0"
            Click="downarrow_Click">
                <TextBlock Text="⬇"
                   FontSize="36"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,4">
                </TextBlock>
            </Button>
        </StackPanel>


        <Slider x:Name="processaudio"              
                
                Grid.Column="0"
                Grid.Row="1"
                Value="0" 
                Maximum="300"
                VerticalAlignment="Top" Height="18" ValueChanged="processaudio_ValueChanged" Margin="10,0,12,0" Grid.ColumnSpan="2" 
                />

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="162,26,0,0" Grid.Column="1">

            <Button x:Name="previousa"
            Width="48"
            Height="48"
            FontSize="24"
            Content="⏮"
            Click="previousa_Click"
            Margin="0,0,8,0"/>

            <Grid Width="48" Height="48" Margin="0,0,8,0">
         
                <Button x:Name="playaudio"
                Width="48"
                Height="48"
                FontSize="24"
                Content="▶︎"
                Click="playaudio_Click"/>

                <Button x:Name="stopaudio"
                Width="48"
                Height="48"
                FontSize="24"
                FontWeight="Bold"
                Content="‖"
                Click="stopaudio_Click"
                Visibility="Hidden"/>
            </Grid>

            <Button x:Name="nexta"
            Width="48"
            Height="48"
            FontSize="24"
            Content="⏭"
            Click="nexta_Click"/>
        </StackPanel>


        <TextBlock x:Name="timelabel1"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="504,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="00:00"
                   />

        <TextBlock Text="/"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="542,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   />
        <TextBlock x:Name="timelabel2"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="555,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="00:00"
                   />

        <!--<TextBlock x:Name="playing" 
                   Grid.Column="0"
                    Grid.Row="1"
                    Margin="429,35,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Playing: "
                   ></TextBlock>
        <TextBlock x:Name="name2" 
           Grid.Column="0"
            Grid.Row="1"
            Margin="481,35,0,-1"
            HorizontalAlignment="Left"
            Text=""/>-->





    </Grid>

</Window>
